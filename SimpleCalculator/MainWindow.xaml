<Window x:Class="SimpleCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleCalculator" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <dxlc:LayoutControl Orientation="Vertical">
            <dxlc:LayoutItem>
                <dxe:TextEdit Width="150" Height="30" x:Name="textbxA"></dxe:TextEdit>

            </dxlc:LayoutItem>
            <dxlc:LayoutItem>
                <dxe:TextEdit Width="150" Height="30"  x:Name="textbxB"></dxe:TextEdit>

            </dxlc:LayoutItem>
            <dxlc:LayoutItem>
                <dx:SimpleButton Width="150" Height="30" Background="Gray" Foreground="White" Content="Calculer" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Click="SimpleButton_Click"></dx:SimpleButton>

            </dxlc:LayoutItem>
        </dxlc:LayoutControl>
    </Grid>
</Window>
